<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:orientation = "vertical"

    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tgl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:text="10 April 2019" />

        <TextView
            android:layout_width="184dp"
            android:layout_height="56dp"
            android:layout_below="@+id/tgl"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="39dp"
            android:background="@drawable/dark_blue"
            android:paddingLeft="15dp"
            android:paddingTop="15dp"
            android:text="Hi, I'm interested in your house."
            android:textColor="#ffffff" />

        <ImageView
            android:id="@+id/picture_chat"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_below="@+id/tgl"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/picture_chat" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="487dp">

        <TextView
            android:id="@+id/chat_2"
            android:layout_width="53dp"
            android:layout_height="47dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:layout_marginRight="17dp"
            android:background="@drawable/light_blue"
            android:paddingLeft="15dp"
            android:paddingTop="15dp"
            android:text="Hi"
            android:textColor="#4a4a4a" />


        <TextView
            android:layout_width="53dp"
            android:layout_height="47dp"
            android:layout_below="@+id/chat_2"
            android:layout_alignParentRight="true"
            android:layout_marginTop="-11dp"
            android:layout_marginRight="18dp"
            android:paddingLeft="15dp"
            android:paddingTop="15dp"
            android:text="Seen"
            android:textColor="#9B9B9B" />


    </RelativeLayout>


    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:background="?android:attr/windowBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/navigation" />

</LinearLayout>